%h1.mt-3.mb-3= @event.name
.row
  .col-8
    .card.mb-2
      %h5.card-header イベント内容
      .card-body
        %p.card-text= @event.content
    .card.mb-2
      %h5.card-header 開催時間
      .card-body
        %p.card-text= "#{l(@event.start_at, format: :long)} - #{l(@event.end_at, format: :long)}"
    .card.mb-2
      %h5.card-header 開催場所
      .card-body
        %p.card-text= @event.place
    .card.mb-2
      %h5.card-header 主催者
      %p #{@event.name}
  .col-4
    = link_to "イベントを編集する", edit_event_path(@event.id), class: "btn btn-info btn-lg btn-block"
    = link_to "イベントを削除する", event_path(@event.id), class: "btn btn-danger btn-lg btn-block", method: :delete, data: { confirm: "本当に削除しますか？"}
